<configuration>

	<!-- console -->
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %-5p: %C - %m%n</pattern>
		</encoder>
	</appender>

	<logger name="com.exemple.service.customer" level="DEBUG" />

	<root level="WARN">
		<appender-ref ref="console" />
	</root>

</configuration>