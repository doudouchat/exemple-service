<ruleset comparisonMethod="maven">
	<ignoreVersions>
		<ignoreVersion type="regex">(?i).*atlassian(?:-?\d+)?</ignoreVersion>
		<ignoreVersion type="regex">(?i).*redhat(?:-?\d+)?</ignoreVersion>
	</ignoreVersions>
	<rules>
		<rule groupId="org.slf4j" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">(?i).*(alpha|beta)(?:-?\d+)?</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="ch.qos.logback" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">(?i).*alpha(?:-?\d+)?</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="org.codehaus.groovy" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">(?i).*(alpha|beta|-rc)(?:-?\d+)?</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="org.apache.cassandra" artifactId="cassandra-all" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">4.0-(alpha|beta)(?:-?\d+)?</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="com.hazelcast" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">4.0-(BETA)(?:-?\d+)</ignoreVersion>
			</ignoreVersions>
		</rule>
	</rules>
</ruleset>