<ruleset comparisonMethod="maven">
	<ignoreVersions>
		<ignoreVersion type="regex">(?i).*atlassian(?:-?\d+)?</ignoreVersion>
		<ignoreVersion type="regex">(?i).*redhat(?:-?\d+)?</ignoreVersion>
		<ignoreVersion type="regex">(?i).*(alpha|beta|RC|CR|M)(?:.?-?\d+)?</ignoreVersion>
	</ignoreVersions>
	<rules>
		<rule groupId="org.apache.tomcat" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">10.(.*)</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="org.hibernate.validator" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">7.(.*)</ignoreVersion>
			</ignoreVersions>
		</rule>
		<rule groupId="org.glassfish.jersey.*" comparisonMethod="maven">
			<ignoreVersions>
				<ignoreVersion type="regex">3.(.*)</ignoreVersion>
			</ignoreVersions>
		</rule>
	</rules>
</ruleset>